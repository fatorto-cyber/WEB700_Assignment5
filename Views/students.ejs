<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 20px;
            background-color: #f4f4f4;
        }
        h1 {
            color: #333;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            background: #fff;
            margin: 5px 0;
            padding: 10px;
            border-radius: 5px;
            box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.1);
        }
        a {
            display: inline-block;
            margin-top: 10px;
            text-decoration: none;
            color: white;
            background: #007bff;
            padding: 8px 12px;
            border-radius: 5px;
        }
        a:hover {
            background: #0056b3;
        }
    </style>
</head>
<body>
    <h1>Students List</h1>

    <% if (students && students.length > 0) { %>
        <ul>
            <% students.forEach(student => { %>
                <li><strong>Name:</strong> <%= student.firstName %> <%= student.lastName %> | 
                    <strong>Course:</strong> <%= student.course %>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No students found.</p>
    <% } %>

    <a href="/students/add">Add a Student</a>
    <a href="/">Back to Home</a>
</body>
</html>
